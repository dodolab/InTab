<Window x:Class="InteractiveTable.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rc="clr-namespace:InteractiveTable.GUI.Table"
        xmlns:rw="clr-namespace:InteractiveTable.GUI.Other"
        Title="Interactive table"
        Width="1055"
        Height="600"
        MinWidth="1055"
        MinHeight="400"
        IsEnabled="False"
        WindowStartupLocation="CenterScreen"
        UseLayoutRounding="True"
        Initialized="Window_Initialized"
        SizeChanged="Window_SizeChanged"
        Closing="Window_Closing"
        Loaded="Window_Loaded" Icon="/InteractiveTable;component/Template/images/tableIcons/rock_generator.png">
    <Grid>
        <rw:Menu x:Name="mainMenu" 
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Top"></rw:Menu>
        
        <rc:TablePanel x:Name="tablePanel" VerticalAlignment="Stretch"
                       HorizontalAlignment="Stretch"
                       Margin="0,23,0,0"></rc:TablePanel>
        
    </Grid>
</Window>
